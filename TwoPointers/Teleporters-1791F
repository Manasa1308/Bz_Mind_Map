import java.util.*;

public class Main {
    static class Teleporter {
        int cost;
        Teleporter(int cost) {
            this.cost = cost;
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();

        while (t-- > 0) {
            int n = sc.nextInt();
            long c = sc.nextLong();

            Teleporter[] arr = new Teleporter[n];

            for (int i = 0; i < n; i++) {
                int a = sc.nextInt();
                arr[i] = new Teleporter(a + i + 1);
            }

            Arrays.sort(arr, Comparator.comparingInt(o -> o.cost));

            int count = 0;
            for (Teleporter tp : arr) {
                if (c >= tp.cost) {
                    c -= tp.cost;
                    count++;
                } else {
                    break;
                }
            }
            System.out.println(count);
        }
    }
}
