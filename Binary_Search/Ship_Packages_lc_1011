class Solution {
    public int shipWithinDays(int[] w, int d) {
        int l=0,r=0;
        for(int x:w){
            l=Math.max(l,x);
            r+=x;
        }
        while(l<r){
            int m=(l+r)/2,days=1,cur=0;
            for(int x:w){
                if(cur+x>m){
                    days++;
                    cur=0;
                }
                cur+=x;
            }
            if(days<=d) r=m;
            else l=m+1;
        }
        return l;
    }
}
